void wxCam::adjustSize(std::string res)
{
    //std::cout<<"Adjust size"<<std::endl;
    if(frame) {
        int w, h;
        frame->GetResolution(res, w, h);
        if (w < 320)
            w=320;
        if(h<240)
            h=240;            
        SetSize( w+50, h+130 );    
        panel->SetSize( w+50, h+130 );   
        frame->SetSize( GetClientSize() );
    }
}

